<h1 class="text-center">mss.nyc Songbook</h1>

<p class="text-center">B = Beginner, E = Easy, M = Medium, H = Hard</p>

<table style="width: 100%;">
  <tr>
  <% pdf_songs.each_slice( (pdf_songs.size/3.0).ceil ) do |songs| %>
    <td style="vertical-align: top">
      <table class="table table-sm table-borderless" style="width: 100%;">
        <tbody>
        <% songs.each do |song| %>
          <tr>
            <td><%= song[:title] %> (<%= difficulty_text(song[:difficulty]).try(:titleize) %>)</td>
            <td><%= (song[:order].to_i * 2) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </td>
  <% end %>
  </tr>
</table>
